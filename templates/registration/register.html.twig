{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
				<h1>Register</h1>

				{{ form_start(registrationForm) }}
				<fieldset class="mb-3">
					<legend>Identity</legend>
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.email) }}
				</fieldset>
				<fieldset class="mb-3">
					<legend>Location</legend>
					{{ form_row(registrationForm.address) }}
					{{ form_row(registrationForm.city) }}
					{{ form_row(registrationForm.zipcode) }}
				</fieldset>
				{{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn btn-primary btn-lg my-3">Register</button>
				<a href="{{ path('app_login') }}" class="btn btn-secondary">Login</a>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
