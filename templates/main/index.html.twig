{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">

			<div class="col-12">

				<h1>Ecommerce</h1>
				<p>Welcome to our store</p>

			</div>
			{% for category in categories %}
				{% if category.parent == null %}
					<div class="col-12">
						<h2>
							{{ category.name }}
						</h2>
					{% else %}
						<div class="col-4">
							<div class="card h-100">
								<div class="card-body">
									<h3 class="card-title">{{ category.name }}</h3>
									<a href="{{ path('app_categories_list', {slug: category.slug}) }}" class="btn btn-primary">See all</a>
								</div>
							</div>
						</div>
					{% endif %}
			</div>
				{% endfor %}
		</section>

	</main>
{% endblock %}
